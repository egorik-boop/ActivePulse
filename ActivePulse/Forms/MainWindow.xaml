<Window x:Class="ActivePulse.Forms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActivePulse.Forms"        
        mc:Ignorable="d"
        Title="ActivePulse" 
        Height="700" 
        Width="1300"
        WindowStartupLocation="CenterScreen"
        Background="#FF424242">

    <Window.Resources>
        <!-- Стиль для заголовков разделов -->
        <Style TargetType="TextBlock" x:Key="SectionHeader">
            <Setter Property="Foreground" Value="#FFD4A017"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Стиль для карточек товаров -->
        <Style TargetType="Border" x:Key="ProductCard">
            <Setter Property="Background" Value="#FF555555"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF777777"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="Height" Value="350"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <!-- Стиль для изображений товаров -->
        <Style TargetType="Image" x:Key="ProductImage">
            <Setter Property="Height" Value="140"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для названий товаров -->
        <Style TargetType="TextBlock" x:Key="ProductName">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="MaxWidth" Value="190"/>
        </Style>

        <!-- Стиль для кнопок -->
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Background" Value="#FF555555"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFD4A017"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFD4A017"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопки избранного -->
        <Style TargetType="Button" x:Key="FavoriteButton" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Content" Value="В избранное"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <!-- Стиль для поисковой строки -->
        <Style TargetType="TextBox" x:Key="SearchBox">
            <Setter Property="Background" Value="#FF666666"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFD4A017"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Width" Value="220"/>
        </Style>

        <!-- Контекстное меню для товара -->
        <ContextMenu x:Key="ProductContextMenu">
            <MenuItem Header="Подробнее" Click="ProductInformation_Click"/>
            <MenuItem Header="Добавить в корзину"/>
            <MenuItem Header="Добавить в избранное"/>
        </ContextMenu>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Панель фильтров -->
        <Border Background="#FF555555" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Поисковая строка -->
                    <TextBlock TextWrapping="Wrap" Text="Поиск товаров" Style="{StaticResource SectionHeader}"/>
                    <TextBox x:Name="SearchTextBox" 
                             Style="{StaticResource SearchBox}"
                             Foreground="#FFAAAAAA" TextChanged="SearchTextBox_TextChanged">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Button x:Name="CartButton" Content="Корзина" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,154,76,0" Padding="10,5" Click="ViewCart_Click" Height="36" Width="134"
                Style="{StaticResource ActionButton}"/>

        <Button x:Name="ProfileButton" Content="Профиль" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,213,76,0" Padding="10,5" Height="36" Width="134" Click="ProfileButton_Click"
                Style="{StaticResource ActionButton}"/>

        <Button x:Name="FavouritesButton" Content="Избранное" HorizontalAlignment="Right" VerticalAlignment="Top" 
        Margin="0,275,78,0" Padding="10,5" Height="36" Width="134" Click="FavouritesButton_Click"
                Style="{StaticResource ActionButton}"/>

        <Button x:Name="UsersButton" Content="Управление пользователями" HorizontalAlignment="Center" VerticalAlignment="Top" 
                Margin="0,570,0,0" Padding="10,5" Height="36" Width="193" Click="UsersButton_Click"
                Style="{StaticResource ActionButton}"/>

        <Button x:Name="ProductsButton" Content="Управление товарами" HorizontalAlignment="Center" VerticalAlignment="Top" 
                Margin="0,619,0,0" Padding="10,5" Height="36" Width="193" Click="ProductsButton_Click"
                Style="{StaticResource ActionButton}"/>

        <!-- Список товаров -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Padding="10">
            <ItemsControl x:Name="ProductsItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ProductCard}" 
                                ContextMenu="{StaticResource ProductContextMenu}"
                                Tag="{Binding}">
                            <StackPanel MouseLeftButtonDown="StackPanel_MouseLeftButtonDown">
                                <Border Background="#FF333333" Height="140" Width="180" CornerRadius="3">
                                    <Image Style="{StaticResource ProductImage}"
                                           Source="{Binding ImagePath, TargetNullValue='pack://application:,,,/ActivePulse;component/Images/image.png'}"/>
                                </Border>
                                <TextBlock Text="{Binding ProductName}" Style="{StaticResource ProductName}"/>
                                <TextBlock Text="{Binding Price, StringFormat='{}{0} руб.'}"  
                                           Foreground="#FFD4A017" 
                                           FontSize="16"
                                           HorizontalAlignment="Center"/>
                                <Button Content="Добавить в корзину" 
                                        Style="{StaticResource ActionButton}"
                                        Click="AddToCart_Click"
                                        Tag="{Binding ProductId}"/>
                                <Button Style="{StaticResource FavoriteButton}"
                                        Click="AddToFavourites_Click"
                                        Tag="{Binding ProductId}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>