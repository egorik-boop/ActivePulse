<Window x:Class="ActivePulse.Forms.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActivePulse.Forms"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="ActivePulse - Редактирование профиля" 
        Height="686" 
        Width="850"
        WindowStartupLocation="CenterScreen"
        Background="#FF424242">

    <Window.Resources>
        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox" x:Key="AuthTextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#FFEEEEEE"/>
            <Setter Property="BorderBrush" Value="#FFD4A017"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="PasswordBox" x:Key="AuthPasswordBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#FFEEEEEE"/>
            <Setter Property="BorderBrush" Value="#FFD4A017"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="5"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Стиль для DatePicker -->
        <Style x:Key="BirthDatePickerStyle" TargetType="DatePicker">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#FFEEEEEE"/>
            <Setter Property="BorderBrush" Value="#FFD4A017"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="IsTodayHighlighted" Value="True"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
            <Setter Property="DisplayDateStart" Value="1900-01-01"/>
            <Setter Property="DisplayDateEnd" Value="{x:Static sys:DateTime.Today}"/>
        </Style>

        <!-- Стиль для ComboBox -->
        <Style TargetType="ComboBox" x:Key="AuthComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#FFEEEEEE"/>
            <Setter Property="BorderBrush" Value="#FFD4A017"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- Стиль для кнопок -->
        <Style TargetType="Button" x:Key="AuthButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE0A800"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Варианты пола -->
        <x:Array x:Key="GenderOptions" Type="sys:String">
            <sys:String>Мужской</sys:String>
            <sys:String>Женский</sys:String>
        </x:Array>
    </Window.Resources>

    <Grid>
        <Border Background="#FF555555"
                CornerRadius="10"
                Width="612"
                Height="608"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" 
                                ShadowDepth="5" 
                                Opacity="0.2"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <!-- Разделитель -->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левая колонка - Основные данные -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Основные данные"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#FFD4A017"
                                   TextAlignment="Center"
                                   Margin="0,0,0,20"/>

                        <!-- Имя -->
                        <TextBlock Text="Имя*" FontSize="14" Foreground="#FFCCCCCC"/>
                        <TextBox Style="{StaticResource AuthTextBox}" x:Name="FirstNameTextBox"/>

                        <!-- Фамилия -->
                        <TextBlock Text="Фамилия*" FontSize="14" Foreground="#FFCCCCCC"/>
                        <TextBox Style="{StaticResource AuthTextBox}" x:Name="LastNameTextBox"/>

                        <!-- Отчество -->
                        <TextBlock Text="Отчество" FontSize="14" Foreground="#FFCCCCCC"/>
                        <TextBox Style="{StaticResource AuthTextBox}" x:Name="PatronymicTextBox"/>

                        <!-- Дата рождения -->
                        <TextBlock Text="Дата рождения" FontSize="14" Foreground="#FFCCCCCC"/>
                        <DatePicker Style="{StaticResource BirthDatePickerStyle}"
                                    x:Name="BirthDatePicker"
                                    SelectedDate="{x:Static sys:DateTime.Today}"/>

                        <!-- Телефон -->
                        <TextBlock Text="Телефон" FontSize="14" Foreground="#FFCCCCCC"/>
                        <TextBox Style="{StaticResource AuthTextBox}" x:Name="PhoneTextBox"/>

                        <!-- Пол -->
                        <TextBlock Text="Пол" FontSize="14" Foreground="#FFCCCCCC"/>
                        <ComboBox Style="{StaticResource AuthComboBox}"
                                  ItemsSource="{StaticResource GenderOptions}"
                                  SelectedIndex="0"
                                  x:Name="GenderComboBox"/>
                    </StackPanel>

                    <!-- Разделитель -->
                    <Rectangle Grid.Column="1" Fill="#FF777777" Width="1" Margin="0,40,0,40"/>

                    <!-- Правая колонка - Учетные данные -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Учетные данные"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#FFD4A017"
                                   TextAlignment="Center"
                                   Margin="0,0,0,20"/>

                        <!-- Email -->
                        <TextBlock Text="Email*" FontSize="14" Foreground="#FFCCCCCC"/>
                        <TextBox Style="{StaticResource AuthTextBox}" x:Name="EmailTextBox"/>

                        <!-- Логин -->
                        <TextBlock Text="Логин*" FontSize="14" Foreground="#FFCCCCCC"/>
                        <TextBox Style="{StaticResource AuthTextBox}" x:Name="LoginTextBox"/>

                        <!-- Пароль -->
                        <TextBlock Text="Новый пароль" FontSize="14" Foreground="#FFCCCCCC"/>
                        <PasswordBox Style="{StaticResource AuthPasswordBox}" x:Name="PasswordBox"/>

                        <!-- Подтверждение пароля -->
                        <TextBlock Text="Подтверждение пароля" FontSize="14" Foreground="#FFCCCCCC"/>
                        <PasswordBox Style="{StaticResource AuthPasswordBox}" x:Name="ConfirmPasswordBox"/>

                        <!-- Кнопки -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,20,0,0" Cursor="">
                            <Button Content="Сохранить"
                                    Style="{StaticResource AuthButton}"
                                    Background="#FFD4A017"
                                    Click="SaveButton_Click"/>
                            <Button Content="Отмена"
                                    Style="{StaticResource AuthButton}"
                                    Background="#FF777777"
                                    Click="CancelButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>