<Window x:Class="ActivePulse.Forms.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Корзина" 
        Height="500" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#FF424242">

    <!-- Остальные ресурсы остаются без изменений -->

    <Window.Resources>
        <Style x:Key="CheckoutButton" TargetType="Button">
            <Setter Property="Background" Value="#FF555555"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="QuantityButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF555555"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

       

        <!-- Чистый стиль для контекстного меню -->
        <Style x:Key="PureTextContextMenu" TargetType="ContextMenu">
            <Setter Property="Background" Value="#FF555555"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ItemsPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Абсолютно чистый текстовый пункт меню -->
        <Style x:Key="AbsolutePureTextMenuItem" TargetType="MenuItem">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <TextBlock Text="{TemplateBinding Header}"
                                   Padding="12,6"
                                   Background="Transparent"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FFD4A017"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Список товаров -->
        <ListView x:Name="CartListView" ItemsSource="{Binding}" Grid.Row="0" Margin="10">
            <!-- Контекстное меню остается без изменений -->

            <ListView.ContextMenu>
                <ContextMenu Style="{StaticResource PureTextContextMenu}">
                    <MenuItem Header="Удалить" 
                             Click="DeleteItemContextMenu_Click"
                             Style="{StaticResource AbsolutePureTextMenuItem}"
                             Tag="{Binding PlacementTarget.SelectedItem, 
                                  RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                </ContextMenu>
            </ListView.ContextMenu>

            <ListView.View>
                <GridView>
                    <!-- Изображение -->
                    <GridViewColumn Header="Изображение" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding ImagePath}" 
                                       Width="60" 
                                       Height="60" 
                                       Stretch="Uniform"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Название -->
                    <GridViewColumn Header="Название" 
                                   DisplayMemberBinding="{Binding ProductName}" 
                                   Width="250"/>

                    <!-- Цена -->
                    <GridViewColumn Header="Цена" 
                                   DisplayMemberBinding="{Binding Price, StringFormat='{}{0} руб.'}" 
                                   Width="100"/>

                    <!-- Количество с кнопками +/- -->
                    <GridViewColumn Header="Кол-во" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="-" 
                                            Width="25"
                                            Margin="0,0,5,0"
                                            Click="DecreaseQuantity_Click"
                                            Tag="{Binding}"
                                            Style="{StaticResource QuantityButtonStyle}"/>

                                    <TextBlock Text="{Binding Quantity}" 
                                               Width="30"
                                               TextAlignment="Center"
                                               VerticalAlignment="Center"/>

                                    <Button Content="+" 
                                            Width="25"
                                            Margin="5,0,0,0"
                                            Click="IncreaseQuantity_Click"
                                            Tag="{Binding}"
                                            Style="{StaticResource QuantityButtonStyle}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Сумма -->
                    <GridViewColumn Header="Сумма" 
                                   DisplayMemberBinding="{Binding Total, StringFormat='{}{0} руб.'}" 
                                   Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Панель итого и кнопка оформления -->
        <Border Grid.Row="1" Background="#FF3D3D3D" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Итого: " 
                           FontWeight="Bold" 
                           Foreground="#FFD4A017"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBlock x:Name="TotalTextBlock"
                           Text="{Binding GrandTotal, StringFormat='{}{0} руб.', RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"
                           MinWidth="100"/>
                <Button Content="Оформить заказ" 
                        Style="{StaticResource CheckoutButton}"
                        Click="Checkout_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>