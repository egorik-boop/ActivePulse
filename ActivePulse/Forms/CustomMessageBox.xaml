<Window x:Class="ActivePulse.Forms.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="MessageBoxWindow"
        Title=""
        SizeToContent="Height"
        Width="397"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        Opacity="1" Height="195">

    <Window.Resources>
        <!-- Анимация появления -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                            From="0" To="1"
                            Duration="0:0:0.3"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInAnimation}"/>
        </EventTrigger>
    </Window.Triggers>

    <!-- Темный фон с контрастными элементами -->
    <Border Background="#FF333333"
            CornerRadius="10"
            Margin="10"
            BorderThickness="1"
            BorderBrush="#FF444444">

        <Border.Effect>
            <DropShadowEffect BlurRadius="20" 
                            ShadowDepth="5" 
                            Opacity="0.3"/>
        </Border.Effect>

        <StackPanel Margin="20">
            <!-- Заголовок -->
            <TextBlock x:Name="TitleText"
                       Text="Ошибка"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#FFD4A017"
                       TextAlignment="Center"
                       Margin="0,0,0,15"/>

            <!-- Сообщение -->
            <TextBlock x:Name="MessageText"
                       Text="Текст сообщения"
                       FontSize="14"
                       Foreground="#FFEEEEEE"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,25"
                       MaxWidth="300"/>

            <!-- Кнопка OK -->
            <Button Content="OK"
                    HorizontalAlignment="Center"
                    Width="120"
                    Height="35"
                    Background="#FFD4A017"
                    Foreground="Black"
                    FontWeight="Bold"
                    FontSize="16"
                    Margin="0,10,0,0"
                    Click="OkButton_Click"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF0C14B"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Border>
</Window>