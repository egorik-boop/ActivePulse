<Window x:Class="ActivePulse.Forms.OrderCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оформление заказа" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#FF424242">

    <Window.Resources>
        <!-- Общие стили -->
        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock" BasedOn="{StaticResource FormLabelStyle}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>

        <Style x:Key="FormInputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF555555"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF666666"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="#FF555555"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF666666"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,15,15"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="RadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SubmitButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFD4A017"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,25,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Width" Value="180"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE5B73B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для ComboBox -->
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="BorderBrush" Value="#FF666666"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="36"/>
        </Style>

        <!-- Стиль для элементов ComboBox -->
        <Style x:Key="DarkComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="BorderBrush" Value="#FF666666"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#FF555555"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для предупреждений -->
        <Style x:Key="WarningTextStyle" TargetType="TextBlock" BasedOn="{StaticResource FormLabelStyle}">
            <Setter Property="Foreground" Value="OrangeRed"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Стиль для итоговой информации -->
        <Style x:Key="TotalInfoStyle" TargetType="TextBlock" BasedOn="{StaticResource FormLabelStyle}">
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <Style x:Key="FinalTotalStyle" TargetType="TextBlock" BasedOn="{StaticResource TotalInfoStyle}">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FFD4A017"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Способ получения -->
        <TextBlock Text="1. Способ получения" 
                   Style="{StaticResource SectionHeaderStyle}"
                   Grid.Row="0"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,5">
            <RadioButton x:Name="PickupRadio" 
                         Content="Самовывоз" 
                         GroupName="DeliveryType" 
                         Style="{StaticResource RadioButtonStyle}"
                         Checked="DeliveryType_Checked"/>
            <RadioButton x:Name="DeliveryRadio" 
                         Content="Доставка" 
                         GroupName="DeliveryType" 
                         Style="{StaticResource RadioButtonStyle}"
                         Checked="DeliveryType_Checked"/>
        </StackPanel>

        <TextBlock x:Name="AvailabilityWarningTextBlock" 
                   Style="{StaticResource WarningTextStyle}"
                   Grid.Row="2"
                   Visibility="Collapsed"/>

        <!-- Выбор магазина (видно при самовывозе) -->
        <StackPanel x:Name="PickupPanel" 
                    Grid.Row="3" 
                    Visibility="Collapsed">
            <TextBlock Text="Выберите магазин для самовывоза:" 
                       Style="{StaticResource FormLabelStyle}"/>
            <ComboBox x:Name="StoreComboBox" 
                      Style="{StaticResource DarkComboBoxStyle}"
                      ItemContainerStyle="{StaticResource DarkComboBoxItemStyle}"
                      DisplayMemberPath="StoreName"
                      SelectionChanged="StoreComboBox_SelectionChanged"/>
        </StackPanel>

        <!-- Адрес доставки (видно при доставке) -->
        <StackPanel x:Name="DeliveryPanel" 
                    Grid.Row="3" 
                    Visibility="Collapsed">
            <TextBlock Text="Адрес доставки:" 
                       Style="{StaticResource FormLabelStyle}"/>
            <TextBox x:Name="AddressTextBox" 
                     Style="{StaticResource FormInputStyle}"
                     Height="80" 
                     TextWrapping="Wrap"
                     AcceptsReturn="True"/>
        </StackPanel>

        <!-- Способ оплаты -->
        <Grid Grid.Row="4" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="2. Способ оплаты" 
                           Style="{StaticResource SectionHeaderStyle}"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="CashRadio" 
                                 Content="Наличными" 
                                 GroupName="PaymentType" 
                                 Style="{StaticResource RadioButtonStyle}"
                                 Checked="PaymentType_Checked"/>
                    <RadioButton x:Name="CardRadio" 
                                 Content="Картой" 
                                 GroupName="PaymentType" 
                                 Style="{StaticResource RadioButtonStyle}"
                                 Checked="PaymentType_Checked"/>
                </StackPanel>
            </StackPanel>

            <!-- Данные карты (видно при оплате картой) -->
            <StackPanel x:Name="CardPanel" 
                        Grid.Column="2"
                        Visibility="Collapsed">
                <TextBlock Text="Данные карты:" 
                           Style="{StaticResource FormLabelStyle}"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <StackPanel>
                            <TextBlock Text="Серия и номер карты:" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox x:Name="CardNumberTextBox" 
                                     Style="{StaticResource FormInputStyle}"
                                     MaxLength="16"
                                     ToolTip="Номер карты (16 цифр)"
                                     Width="250"/>
                        </StackPanel>

                        <StackPanel Margin="15,0,0,0">
                            <TextBlock Text="Имя владельца:" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox x:Name="CardHolderTextBox" 
                                     Style="{StaticResource FormInputStyle}"
                                     ToolTip="Имя владельца карты"
                                     Width="250"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <StackPanel>
                            <TextBlock Text="Срок действия:" Style="{StaticResource FormLabelStyle}"/>
                            <DatePicker x:Name="CardExpiryDatePicker"
                                       Style="{StaticResource DatePickerStyle}"
                                       SelectedDateFormat="Short"
                                       ToolTip="Срок действия карты"/>
                        </StackPanel>

                        <StackPanel Margin="15,0,0,0">
                            <TextBlock Text="CVV код:" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox x:Name="CardCvvTextBox" 
                                     Style="{StaticResource FormInputStyle}"
                                     Width="80"
                                     MaxLength="3"
                                     Margin="0,0,0,15"
                                     ToolTip="CVV код (3 цифры)"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>

        <!-- Итоговая информация -->
        <StackPanel Grid.Row="5" Margin="0,20,0,0">
            <TextBlock Text="3. Итоговая информация" 
                       Style="{StaticResource SectionHeaderStyle}"/>
            <Border Background="#FF555555" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock x:Name="TotalTextBlock" 
                               Style="{StaticResource TotalInfoStyle}"/>
                    <TextBlock x:Name="DeliveryCostTextBlock" 
                               Style="{StaticResource TotalInfoStyle}"/>
                    <Separator Background="#FF666666" Margin="0,10,0,10"/>
                    <TextBlock x:Name="FinalTotalTextBlock" 
                               Style="{StaticResource FinalTotalStyle}"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Кнопка подтверждения -->
        <Button x:Name="SubmitButton" 
                Content="Подтвердить заказ" 
                Style="{StaticResource SubmitButtonStyle}"
                Grid.Row="6"
                Click="SubmitButton_Click"
                HorizontalAlignment="Right"
                Margin="0,20,0,0"/>
    </Grid>
</Window>