<Window x:Class="ActivePulse.Forms.ProductsControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActivePulse.Forms"
        mc:Ignorable="d"
        Title="Управление товарами" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FF424242">

    <Window.Resources>
        <!-- Стили для формы -->
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Background" Value="#FF555555"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFD4A017"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFD4A017"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox" x:Key="FormTextBox">
            <Setter Property="Background" Value="#FF555555"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF777777"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="ComboBox" x:Key="FormComboBox">
            <Setter Property="Background" Value="#FF555555"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF777777"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="DataGrid" x:Key="ProductsDataGrid">
            <Setter Property="Background" Value="#FF555555"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF777777"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="AlternatingRowBackground" Value="#FF444444"/>
            <Setter Property="RowBackground" Value="#FF555555"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="FormLabel">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5,5,5,2"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="GroupBox" x:Key="FormGroupBox">
            <Setter Property="Foreground" Value="#FFD4A017"/>
            <Setter Property="BorderBrush" Value="#FF777777"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#FF424242"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель инструментов -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FF555555">
            <Button x:Name="AddButton" Content="Добавить" Style="{StaticResource ActionButton}" Click="AddButton_Click"/>
            <Button x:Name="EditButton" Content="Редактировать" Style="{StaticResource ActionButton}" Click="EditButton_Click"/>
            <Button x:Name="DeleteButton" Content="Удалить" Style="{StaticResource ActionButton}" Click="DeleteButton_Click"/>
            <Button x:Name="RefreshButton" Content="Обновить" Style="{StaticResource ActionButton}" Click="RefreshButton_Click"/>
        </StackPanel>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Список товаров -->
            <DataGrid x:Name="ProductsDataGrid" Grid.Column="0" Style="{StaticResource ProductsDataGrid}"
                      SelectionChanged="ProductsDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="Auto"/>
                    <DataGridTextColumn Header="Название" Binding="{Binding ProductName}" Width="*"/>
                    <DataGridTextColumn Header="Производитель" Binding="{Binding Manufacturer.ManufacturerName}" Width="Auto"/>
                    <DataGridTextColumn Header="Категория" Binding="{Binding CategoryNameNavigation.CategoryName}" Width="Auto"/>
                    <DataGridTextColumn Header="Гарантия (мес)" Binding="{Binding WarrantyPeriodInMonth}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Форма редактирования -->
            <GroupBox Grid.Column="1" Header="Редактирование товара" Style="{StaticResource FormGroupBox}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Название товара:" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="ProductNameTextBox" Style="{StaticResource FormTextBox}"/>

                        <TextBlock Text="Производитель:" Style="{StaticResource FormLabel}"/>
                        <ComboBox x:Name="ManufacturerComboBox" 
                                  DisplayMemberPath="ManufacturerName"/>

                        <TextBlock Text="Категория:" Style="{StaticResource FormLabel}"/>
                        <ComboBox x:Name="CategoryComboBox" 
                                  DisplayMemberPath="CategoryName"/>

                        <TextBlock Text="Срок гарантии (мес):" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="WarrantyTextBox" Style="{StaticResource FormTextBox}"/>

                        <!-- Спецификации -->
                        <GroupBox Header="Спецификации" Style="{StaticResource FormGroupBox}" Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="Цвет:" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="ColorTextBox" Style="{StaticResource FormTextBox}"/>

                                <TextBlock Text="Материал:" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="MaterialTextBox" Style="{StaticResource FormTextBox}"/>

                                <TextBlock Text="Вес (кг):" Style="{StaticResource FormLabel}"/>
                                <TextBox x:Name="WeightTextBox" Style="{StaticResource FormTextBox}"/>

                                <TextBlock Text="Пол:" Style="{StaticResource FormLabel}"/>
                                <ComboBox x:Name="GenderComboBox">
                                    <ComboBoxItem Content="М"/>
                                    <ComboBoxItem Content="Ж"/>
                                </ComboBox>
                            </StackPanel>
                        </GroupBox>

                        <!-- Кнопки сохранения/отмены -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                            <Button x:Name="SaveButton" Content="Сохранить" Style="{StaticResource ActionButton}" 
                                    Click="SaveButton_Click" Width="100" Margin="0,0,5,0"/>
                            <Button x:Name="CancelButton" Content="Отмена" Style="{StaticResource ActionButton}" 
                                    Click="CancelButton_Click" Width="100"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Grid>
    </Grid>
</Window>