<Window x:Class="ActivePulse.Forms.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActivePulse.Forms"
        mc:Ignorable="d"
        Title="ActivePulse - Регистрация" 
        Height="650" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FF424242">

    <Window.Resources>
        <!-- Стиль для текстовых полей -->
        <Style TargetType="TextBox" x:Key="AuthTextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#FFEEEEEE"/>
            <Setter Property="BorderBrush" Value="#FFD4A017"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="MinWidth" Value="300"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="AcceptsReturn" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        HorizontalScrollBarVisibility="Auto"
                                        VerticalScrollBarVisibility="Disabled"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для поля пароля -->
        <Style TargetType="PasswordBox" x:Key="AuthPasswordBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#FFEEEEEE"/>
            <Setter Property="BorderBrush" Value="#FFD4A017"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="MinWidth" Value="300"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="5"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        HorizontalScrollBarVisibility="Auto"
                                        VerticalScrollBarVisibility="Disabled"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок -->
        <Style TargetType="Button" x:Key="AuthButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,0"/>
        </Style>

        <Style TargetType="Button" x:Key="TextButton">
            <Setter Property="Foreground" Value="#FFD4A017"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}" 
                                   Foreground="{TemplateBinding Foreground}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FFF0A500"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для подписей полей -->
        <Style TargetType="TextBlock" x:Key="FieldLabel">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Width" Value="120"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Основной контейнер с тенью -->
        <Border Background="#FF555555"
                CornerRadius="10"
                Width="604"
                Height="552"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" 
                                ShadowDepth="5" 
                                Opacity="0.2"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel VerticalAlignment="Center" 
                           HorizontalAlignment="Center"
                           Width="500"
                           Margin="0,10,0,10">

                    <!-- Заголовок -->
                    <TextBlock Text="Регистрация в ActivePulse"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#FFD4A017"
                               TextAlignment="Center"
                               Margin="0,0,0,20"/>

                    <!-- Подзаголовок -->
                    <TextBlock Text="Создайте новый аккаунт"
                               FontSize="16"
                               Foreground="#FFCCCCCC"
                               TextAlignment="Center"
                               Margin="0,0,0,30"/>

                    <!-- Поле для имени -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Имя:" Style="{StaticResource FieldLabel}" HorizontalAlignment="Left" Margin="73,0,0,0" Width="47"/>
                        <TextBox Grid.Column="1" Style="{StaticResource AuthTextBox}" x:Name="FirstNameTextBox"/>
                    </Grid>

                    <!-- Поле для фамилии -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Фамилия:" Style="{StaticResource FieldLabel}" HorizontalAlignment="Left" Margin="44,0,0,0" Width="76"/>
                        <TextBox Grid.Column="1" Style="{StaticResource AuthTextBox}" x:Name="LastNameTextBox"/>
                    </Grid>

                    <!-- Поле для email -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Email:" Style="{StaticResource FieldLabel}" HorizontalAlignment="Left" Margin="69,0,0,0" Width="51"/>
                        <TextBox Grid.Column="1" Style="{StaticResource AuthTextBox}" x:Name="EmailTextBox"/>
                    </Grid>

                    <!-- Поле для логина -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Логин:" Style="{StaticResource FieldLabel}" HorizontalAlignment="Left" Margin="63,0,0,0" Width="57"/>
                        <TextBox Grid.Column="1" Style="{StaticResource AuthTextBox}" x:Name="LoginTextBox"/>
                    </Grid>

                    <!-- Поле для пароля -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Пароль:" Style="{StaticResource FieldLabel}" HorizontalAlignment="Left" Margin="55,0,0,0" Width="65"/>
                        <PasswordBox Grid.Column="1" Style="{StaticResource AuthPasswordBox}" x:Name="PasswordTextBox"/>
                    </Grid>

                    <!-- Подтверждение пароля -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Подтверждение:" Style="{StaticResource FieldLabel}"/>
                        <PasswordBox Style="{StaticResource AuthPasswordBox}" x:Name="ConfirmPasswordTextBox" Grid.ColumnSpan="2" Margin="120,0,0,0"/>
                    </Grid>

                    <!-- Кнопка регистрации -->
                    <Button x:Name="RegisterButton"
                            Content="Зарегистрироваться"
                            Style="{StaticResource AuthButton}"
                            Background="#FFD4A017"
                            Width="200"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,20" Click="RegisterButton_Click"/>

                    <!-- Ссылка на авторизацию -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,10">
                        <TextBlock Text="Уже есть аккаунт? "
                                   FontSize="12"
                                   Foreground="#FFCCCCCC"/>
                        <Button x:Name="LoginButton" Content="Войти"
                                Style="{StaticResource TextButton}" Click="LoginButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>