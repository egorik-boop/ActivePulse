<Page x:Class="ActivePulse.Forms.Pages.CustomersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="CustomersPage"
      d:DesignHeight="600" d:DesignWidth="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Управление клиентами" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- DataGrid для отображения клиентов -->
        <DataGrid x:Name="CustomersDataGrid" Grid.Row="1" AutoGenerateColumns="False" 
                  CanUserAddRows="False" SelectionChanged="CustomersDataGrid_SelectionChanged"
                  IsReadOnly="True" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CustomerId}" Width="Auto"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding Lastname}" Width="*"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding Firstname}" Width="*"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding Patronymic}" Width="*"/>
                <DataGridTextColumn Header="Дата рождения" Binding="{Binding BirthDate, StringFormat={}{0:dd.MM.yyyy}}" Width="Auto"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="Auto"/>
                <DataGridTextColumn Header="Пол" Binding="{Binding GenderNavigation.Gender}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Форма для добавления/редактирования -->
        <GroupBox Grid.Row="2" Header="Добавить/Редактировать клиента" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Фамилия -->
                <Label Grid.Row="0" Grid.Column="0" Content="Фамилия:" Margin="5" HorizontalAlignment="Right"/>
                <TextBox x:Name="LastNameTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

                <!-- Имя -->
                <Label Grid.Row="0" Grid.Column="2" Content="Имя:" Margin="5" HorizontalAlignment="Right"/>
                <TextBox x:Name="FirstNameTextBox" Grid.Row="0" Grid.Column="3" Margin="5"/>

                <!-- Отчество -->
                <Label Grid.Row="1" Grid.Column="0" Content="Отчество:" Margin="5" HorizontalAlignment="Right"/>
                <TextBox x:Name="PatronymicTextBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

                <!-- Дата рождения -->
                <Label Grid.Row="1" Grid.Column="2" Content="Дата рождения:" Margin="5" HorizontalAlignment="Right"/>
                <DatePicker x:Name="BirthDatePicker" Grid.Row="1" Grid.Column="3" Margin="5"/>

                <!-- Телефон -->
                <Label Grid.Row="2" Grid.Column="0" Content="Телефон:" Margin="5" HorizontalAlignment="Right"/>
                <TextBox x:Name="PhoneTextBox" Grid.Row="2" Grid.Column="1" Margin="5"/>

                <!-- Пол -->
                <Label Grid.Row="2" Grid.Column="2" Content="Пол:" Margin="5" HorizontalAlignment="Right"/>
                <ComboBox x:Name="GenderComboBox" Grid.Row="2" Grid.Column="3" Margin="5" 
                          DisplayMemberPath="Gender" SelectedValuePath="GenderId"/>

                <!-- Кнопки управления -->
                <StackPanel Grid.Row="4" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="AddButton" Content="Добавить" Width="100" Margin="5" Click="AddButton_Click"/>
                    <Button x:Name="UpdateButton" Content="Обновить" Width="100" Margin="5" Click="UpdateButton_Click"/>
                    <Button x:Name="DeleteButton" Content="Удалить" Width="100" Margin="5" Click="DeleteButton_Click"/>
                    <Button x:Name="ClearButton" Content="Очистить" Width="100" Margin="5" Click="ClearButton_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Page>