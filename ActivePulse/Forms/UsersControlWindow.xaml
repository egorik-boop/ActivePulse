<Window x:Class="ActivePulse.Forms.UsersControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActivePulse.Forms"
        mc:Ignorable="d"
        Title="UsersControlWindow" Height="450" Width="800">
    <Grid>
        <TabControl Grid.Column="1" HorizontalContentAlignment="Center" Margin="10,15,10,10">
            <TabItem Background="#e6f5f3">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Сотрудники"/>
                    </StackPanel>
                </TabItem.Header>
                <Frame x:Name="EmployeeFrame" NavigationUIVisibility="Hidden" Margin="7,0,6,0" Height="505"/>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Покупатели"/>
                    </StackPanel>
                </TabItem.Header>
                <Frame x:Name="CustomerFrame"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
